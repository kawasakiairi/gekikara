<!-- パンくずリスト -->
<% breadcrumb :user_show, @user %>

<div class="container my-5">

    <!-- タイトル -->
    <div class="text-center">
    <h1><%= @user.name %>のページ</h1>
    </div>

    <!-- ユーザー詳細 -->
    <div class="user-show-form">
        <%= image_tag(@user.profile_image.url, class: "my-5 ms-5 rounded-circle user-image") %>
        <div class="user-show-text">
            <h2 class="ms-5 fw-bold">
                <%= @user.name %>
            </h2>
            <h2 class="ms-5 my-3 fw-bold">
                <%= @user.comment %>
            </h2>
        </div>

        <!-- お気に入りタブ（8/20追記） -->
        <div class="user-show-tab">
            <ul class="nav pt-3" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link fw-bold active" id="food-tab" data-bs-toggle="tab" data-bs-target="#food" type="button" role="tab" aria-controls="food" aria-selected="true">
                        お気に入り食品
                    </a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link fw-bold" id="review-tab" data-bs-toggle="tab" data-bs-target="#review" type="button" role="tab" aria-controls="review" aria-selected="false">
                        お気に入りレビュー
                    </a>
                </li>
            </ul>
            <!-- コンテンツ詳細（8/20追加） -->
            <div class="tab-content px-5" id="myTabContent">
                <div class="tab-pane py-5 fade show active" id="food" role="tabpanel" aria-labelledby="food-tab">
                    <% 5.times do |i| %>
