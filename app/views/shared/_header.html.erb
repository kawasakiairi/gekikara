<header>
  <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">

    <div class="container-fluid">
      <!-- ハンバーガーメニュー -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- ナビゲーション -->
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <%= link_to I18n.t("header.home"), root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to I18n.t("header.about"), about_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to I18n.t("header.mypage", name: current_user.name), user_path(current_user), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to I18n.t("header.logout"), logout_path, class: "nav-link", data: { turbo_method: :delete } %>
          </li>
        </ul>
        <!-- 検索フォーム -->
        <%= form_with(scope: :search, url: foods_path, method: :get, local: true) do |f| %>
          <div class="d-flex">
            <%= f.text_field :keyword, value: @search_params[:keyword], class:"form-control me-sm-2", placeholder: I18n.t("placeholder.keyword") %>
            <%= f.submit I18n.t("buttons.search"), class:"btn btn-secondary my-2 my-sm-0" %>
          </div>
        <% end %>
      </div>
    </div>
  </nav>
</header>
